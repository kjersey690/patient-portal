extends layout

block content
  .container.py-5
    .row
      .col-md-12
        .row
          .col-md-6.mx-auto
            .card.rounded-0
              h4.text-center.text-white.pt-3.list-group-item.list-group-item-action.list-group-item.bg-primary.p-3 Edit Patient Information
                h1 #{title}
              form(method='POST', action='/patients/edit/'+patient._id)
                #form-group.m-3
                  label Patient Name:
                  input.form-control(name="name", type='text' value=patient.name)
                #form-group.m-3
                  label Address:
                  input.form-control(name="address", type='text', value=patient.address)
                #form-group.m-3
                  label Insurance:
                  input.form-control(name="insurance", type='text', value=patient.insurance)
                #form-group.m-3
                  label Physician:
                  input.form-control(name="physician", type='text', value=patient.physician)
                #form-group.m-3
                  label Sex:
                  input.form-control(name="sex", type='text', value=patient.sex)
                  input.btn.btn-block.btn-primary.mt-3(type="submit", value="Submit")